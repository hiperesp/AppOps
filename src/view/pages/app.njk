{% extends 'layout.njk' %}

{% set tabs = {
    overview: "Overview",
    access_logs: "Access Logs",
    error_logs: "Error Logs",
    app_logs: "App Logs",
    settings: "Settings",
    api_action_logs: false
} %}
{% if tab not in tabs %}
    {% set tab = "overview" %}
{% endif %}

{% set title %}{{ app.name }}{% if tabs[tab] %} - {{ tabs[tab] }}{% endif %}{% endset %}

{% set breadcrumb = [
    {
        text: namespace.name,
        href: '/' + namespace.name
    },
    {
        text: app.name,
        active: true,
        ehref: '//' + (app.domains.app[0] or app.domains.global[0])
    }
] %}
{% set tabs %}
    <ul class="nav nav-tabs px-md-5 px-3">
        {% for key, value in tabs %}
            {% if value %}
                <li class="nav-item">
                    <a class="nav-link {{ "active" if key === tab }}" {{ 'aria-current="page"' if key == tab }} href="/{{ namespace.name }}/{{ app.name }}?tab={{ key }}">
                        {{ value }}
                        {% if key in ["overview"] %}
                            <span class="d-flex badge bg-dark align-items-center ms-2" style="float: right; height: 24px;">Soon</span>
                        {% endif %}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endset %}
{% block content %}
    {% include 'pages/app/' + tab + '.njk' %}
{% endblock %}